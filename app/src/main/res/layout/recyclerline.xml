<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    >

    <!--  titulo, data, numero  -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/base"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/ic_park_black" />


            <TextView
                android:id="@+id/tvNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img"
                android:fontFamily="@font/proxima_nova_font"
                android:text="Parque da Avenida"
                android:textColor="@color/white"
                android:textSize="18sp" />


    <RelativeLayout

        android:id="@+id/divDataEntrada"

        android:layout_below="@id/tvNome"
        android:layout_toRightOf="@+id/img"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/entrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_font"
            android:text="@string/aa"
            android:layout_marginRight="5sp"

            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDataEntrada"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/entrada"
            android:fontFamily="@font/proxima_nova_font"
            android:text="22/04/2022 10h30"
            android:textColor="@color/white"
            android:textSize="12sp" />
</RelativeLayout>


            <RelativeLayout
                android:id="@+id/divDataSaida"
                android:layout_below="@id/divDataEntrada"
                android:layout_toRightOf="@+id/img"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/saida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginRight="5sp"
                    android:fontFamily="@font/proxima_nova_font"
                    android:text="@string/bb"/>

                <TextView
                    android:id="@+id/tvDataSaida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/saida"
                    android:fontFamily="@font/proxima_nova_font"
                    android:text="22/04/2022 11h15"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="10sp"
                android:layout_below="@id/divDataSaida"
                android:layout_toRightOf="@+id/img"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginRight="5sp"
                    android:fontFamily="@font/proxima_nova_font"
                    android:text="Time: "/>

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/time"
                    android:fontFamily="@font/proxima_nova_font"
                    android:text="30min"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_toRightOf="@+id/timeText"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginRight="5sp"
                    android:fontFamily="@font/proxima_nova_font"
                    android:text="Price: "/>

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/price"
                    android:fontFamily="@font/proxima_nova_font"
                    android:text="30min"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />

            </RelativeLayout>






        </RelativeLayout>




    </androidx.cardview.widget.CardView>



</RelativeLayout>